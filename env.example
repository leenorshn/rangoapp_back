# MongoDB Configuration
MONGO_URI=mongodb+srv://user:password@cluster.mongodb.net/rangodb?retryWrites=true&w=majority
MONGO_DB_NAME=rangodb

# JWT Configuration
# IMPORTANT: Use a strong secret (at least 32 characters) in production
JWT_SECRET=your-very-long-and-secure-secret-key-at-least-32-characters-long

# Server Configuration
PORT=8080

# Database Timeouts (optional)
# Timeout for DB operations (default: 5s, min: 1s, max: 60s)
DB_TIMEOUT_SECONDS=5

# Timeout for connection (default: 10s, min: 1s, max: 120s)
DB_CONNECT_TIMEOUT_SECONDS=10

# Max retry attempts (default: 3, max: 10)
DB_MAX_RETRIES=3

# Health Check (optional)
# Health check interval in seconds (default: 30s, min: 10s, max: 300s)
HEALTH_CHECK_INTERVAL_SECONDS=30

# Logging (optional)
# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
LOG_LEVEL=INFO

# CORS Configuration (optional)
# Comma-separated list of allowed origins for CORS
# Example: ALLOWED_ORIGINS=https://rangoweb-ioelziq27-leenorshns-projects.vercel.app,https://yourdomain.com
# Note: Wildcards are not supported, list all exact origins you need
# Defaults to localhost for development if not set
ALLOWED_ORIGINS=https://rangoweb-ioelziq27-leenorshns-projects.vercel.app
